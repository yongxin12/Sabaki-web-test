{
  "name": "sabaki",
  "productName": "Sabaki",
  "version": "0.20.0",
  "description": "An elegant Go/Baduk/Weiqi board and SGF editor for a more civilized age.",
  "author": "Yichuan Shen <shen.yichuan@gmail.com>",
  "homepage": "http://sabaki.yichuanshen.de",
  "license": "MIT",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yishn/Sabaki"
  },
  "build": {
    "appId": "de.yichuanshen.sabaki",
    "copyright": "Copyright Â© 2015-2017 Yichuan Shen",
    "linux": {
      "category": "Game",
      "packageCategory": "games",
      "target": ["deb", "rpm", "pacman", "tar.gz"]
    },
    "mac": {
      "category": "public.app-category.board-games"
    },
    "win": {
      "iconUrl": "https://raw.githubusercontent.com/yishn/sabaki/master/data/icon.ico",
      "target": ["msi"]
    },
    "fileAssociations": [
      {
        "ext": "sgf",
        "name": "SGF"
      }
    ],
    "files": [
      "**/*",
      "!browser/build.js",
      "!**/{.c9,scss,docs}${/*}",
      "!node_modules/moment${/*}",
      "!node_modules/{octicons,sigma}/{plugins,lib,src,build/font}${/*}",
      "!node_modules/sigma/build/plugins/*.js",
      "node_modules/sigma/build/plugins/sigma.renderers.customShapes.min.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/yishn/Sabaki/issues"
  },
  "license": "MIT",
  "dependencies": {
    "argv-split": "^1.0.0",
    "iconv-lite": "^0.4.13",
    "natsort": "^1.0.6",
    "octicons": "^5.0.1",
    "pikaday": "~1.4.0",
    "sigma": "^1.0.3"
  },
  "devDependencies": {
    "electron": "1.4.15",
    "electron-builder": "^11.2.3",
    "mocha": "^3.0.2",
    "tmp": "~0.0.29"
  },
  "scripts": {
    "test": "mocha",
    "pack": "build --dir",
    "dist:macos": "build -m",
    "dist:linux": "build -l",
    "dist:win": "build -w"
  }
}
